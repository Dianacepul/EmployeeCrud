@model EmployeeCrud.Web.Models.EmployeeViewModel
@{
    ViewData["Title"] = "AddEmployee";
}
<div class="container">
    <h3>Pridėti darbuotoją</h3>
    <form class="form horizontal" asp-action="AddEmployee">
        <div class="form-group ">
            <label class="control-label col-sm-2" asp-for="PersonalNumber"></label>
            <div class="col-sm-5">
                <input asp-for="PersonalNumber" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="FirstName"></label>
            <div class="col-sm-5">
                <input class="form-control" type="text" asp-for="FirstName">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="LastName"></label>
            <div class="col-sm-5">
                <input class="form-control" type="text" asp-for="LastName">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Address"></label>
            <div class="col-sm-5">
                <input class="form-control" type="text" asp-for="Address">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Birthday"></label>
            <div class="col-sm-5">
                <input class="form-control" type="date" asp-for="Birthday">
            </div>
        </div>
        <div class="custom-checkbox col-sm-2">
            <label class="control-label " asp-for="IsActive"></label>
            <input type="checkbox" asp-for="IsActive">
        </div>
        <div class="col-sm-5">
            <button class="btn btn-success" type="submit" asp-controller="Employee" asp-action="AddEmployee">Išsaugoti</button>
            <a class="btn btn-dark" asp-controller="Employee" asp-action="Index">Atšaukti</a>
        </div>
    </form>
</div>